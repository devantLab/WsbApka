<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bankLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/hoursButton"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/info_button"
            android:elevation="16dp"
            android:maxLines="1"
            android:minWidth="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/hoursTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:elevation="17dp"
            android:text="Godziny otwarcia"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/hoursIcon"
            app:layout_constraintTop_toTopOf="@+id/hoursButton" />

        <ImageView
            android:id="@+id/hoursIcon"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:elevation="17dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            app:layout_constraintBottom_toBottomOf="@+id/hoursButton"
            app:layout_constraintStart_toStartOf="@+id/hoursButton"
            app:layout_constraintTop_toTopOf="@+id/hoursButton"
            app:srcCompat="@drawable/ic_access_time_white_48dp" />

        <ImageView
            android:id="@+id/arrowHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:elevation="17dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:layout_constraintBottom_toBottomOf="@+id/hoursButton"
            app:layout_constraintEnd_toEndOf="@+id/hoursButton"
            app:layout_constraintTop_toTopOf="@+id/hoursButton"
            app:srcCompat="@drawable/ic_navigate_next_white_36dp" />


    </android.support.constraint.ConstraintLayout>

</android.widget.RelativeLayout>