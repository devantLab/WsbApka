<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventSwipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.peethr.wsbtest.pl.example.peethr.wsbtest.fragments.EventFragment">


        <TextView
            android:id="@+id/emptyRecyclerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brak wydarzeń, przeciągnij aby odświeżyć"
            android:layout_gravity = "center"
            android:textSize="18sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>